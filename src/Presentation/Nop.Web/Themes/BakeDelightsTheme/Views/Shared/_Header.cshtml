<div class="header">
    @await Component.InvokeAsync("Widget", new { widgetZone = "header_before" })
<div class="header-upper">
    <div class="container">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5 header-upper-right pull-right">
            <div class="header-links-wrapper">
                @await Component.InvokeAsync("HeaderLinks")
            </div>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 pull-right">
            <div class="header-selectors-wrapper">
                @await Component.InvokeAsync("TaxTypeSelector")

                @await Component.InvokeAsync("CurrencySelector")

                @await Component.InvokeAsync("LanguageSelector")

                @await Component.InvokeAsync("Widget", new {widgetZone = "header_selectors"})
            </div>
        </div>

        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 pull-left">
            <div class="header-logo pull-left">
                @await Component.InvokeAsync("Logo")
            </div>
        </div>

    </div>
    </div>
    @await Component.InvokeAsync("Widget", new { widgetZone = "header_middle" })
    <div class="header-lower">
        <div class="container">
            <div class="row">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-2 pull-right">
                    @await Component.InvokeAsync("FlyoutShoppingCart")
                </div>

                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 pull-right">
                    <div class="search-box col-xs-9 col-sm-9 col-md-9 col-lg-9">
                        @await Component.InvokeAsync("SearchBox")
                    </div>
                </div>

            </div>
        </div>
    </div>
    @await Component.InvokeAsync("Widget", new { widgetZone = "header_after" })
</div>
